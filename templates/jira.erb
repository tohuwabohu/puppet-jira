#!/bin/sh
### BEGIN INIT INFO
# Provides: jira
# Required-Start:
# Required-Stop:
# Should-Start:
# Should-Stop:
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Start up JIRA
# Description: Atlassian JIRA Issue Tracking and Project Management
# This service starts up the tomcat webapp.
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
NAME=jira
DESC="Atlassian JIRA"
PIDFILE=<%= @pid_file %>
START_SCRIPT=<%= @application_dir %>/bin/start-jira.sh
STOP_SCRIPT=<%= @application_dir %>/bin/stop-jira.sh

test -f /lib/lsb/init-functions || exit 1
. /lib/lsb/init-functions

test -d <%= @data_dir %> || exit 1
cd <%= @data_dir %>

case "$1" in
    start)
        log_daemon_msg "Starting $DESC" "$NAME"
        if CATALINA_PID="$PIDFILE" $START_SCRIPT > /dev/null 2>&1; then
            log_end_msg 0
        else
            log_end_msg 1
        fi
        ;;

    status)
        log_daemon_msg "Checking status of $DESC" "$NAME"
        if [ -f $PIDFILE ]; then
            PID=`cat $PIDFILE`
            if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
                log_progress_msg "is dead but pidfile still exists"
                log_end_msg 1
                exit 3
            else
                log_progress_msg "running"
                log_end_msg 0
            fi
        else
            log_progress_msg "apparently not running"
            log_end_msg 1
            exit 1
        fi
        ;;

    stop)
        log_daemon_msg "Stopping $DESC" "$NAME"
        if CATALINA_PID="$PIDFILE" $STOP_SCRIPT > /dev/null 2>&1; then
            log_end_msg 0
        else
            log_end_msg 1
        fi
        ;;

    restart)
        $0 stop
        $0 start
        ;;

    *)
        echo "Usage: $0 {status|start|stop|restart}"
        exit 1
esac
